FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# Копируем только файлы restore (кэш слоёв!)
COPY ["src/src.csproj", "gateway/src/"]
RUN dotnet restore "./gateway/src/src.csproj" --disable-parallel

# Копируем исходники
COPY src/ ./gateway/src/
WORKDIR "/src/gateway/src"

# ✅ ИСПРАВЛЕННЫЙ publish (без проблемных флагов)
RUN dotnet publish "src.csproj" \
    -c $BUILD_CONFIGURATION \
    -o /app/publish \
    /p:UseAppHost=false \
    --no-restore

# Runtime (минимальный)
FROM mcr.microsoft.com/dotnet/aspnet:10.0-alpine AS final
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080
ENV DOTNET_EnableDiagnostics=0

# Копируем только publish
COPY --from=build /app/publish .

# Healthcheck (исправлен)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl --fail http://localhost:8080/health || exit 1

# ✅ КРИТИЧЕСКОЕ ИСПРАВЛЕНИЕ: dotnet src.dll вместо ./src
ENTRYPOINT ["dotnet", "src.dll"]
