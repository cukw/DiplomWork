# Создайте .dockerignore в Backend/gateway/ с: **/bin, **/obj, *.user, *.suo
FROM --platform=$BUILDPLATFORM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
ARG VERSION=1.0
WORKDIR /src

# Копируем только файлы restore (кэш слоёв!)
COPY ["gateway/src/src.csproj", "gateway/src/"]
RUN dotnet restore "./gateway/src/src.csproj" --disable-parallel

# Копируем исходники
COPY gateway/src/ ./gateway/src/
WORKDIR "/src/gateway/src"
RUN dotnet publish "src.csproj" \
    -c $BUILD_CONFIGURATION \
    -o /app/publish \
    /p:UseAppHost=false \
    --no-restore \
    /p:PublishSingleFile=true \
    /p:PublishTrimmed=true \
    /p:PublishReadyToRun=true

# Runtime (минимальный)
FROM mcr.microsoft.com/dotnet/aspnet:10.0-alpine AS final
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080
ENV DOTNET_EnableDiagnostics=0

# Копируем только publish
COPY --from=build /app/publish .

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl --fail http://localhost:8080/health || exit 1

ENTRYPOINT ["./src"]
