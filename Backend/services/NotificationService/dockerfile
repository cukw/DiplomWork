FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# Копируем только файлы restore (кэш слоёв!)
COPY ["NotificationService.csproj", "."]
RUN dotnet restore "NotificationService.csproj" --disable-parallel

# Копируем исходники
COPY . .
WORKDIR "/src"

# Publish
RUN dotnet publish "NotificationService.csproj" \
    -c $BUILD_CONFIGURATION \
    -o /app/publish \
    --self-contained false \
    /p:PublishTrimmed=false

# Runtime (минимальный)
FROM mcr.microsoft.com/dotnet/aspnet:10.0-alpine AS final
WORKDIR /app
EXPOSE 5006
ENV ASPNETCORE_URLS=http://+:5006
ENV DOTNET_EnableDiagnostics=0

# Копируем только publish
COPY --from=build /app/publish .

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:5006 || exit 1

ENTRYPOINT ["dotnet", "NotificationService.dll"]
