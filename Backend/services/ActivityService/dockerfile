FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# 1. Restore (.csproj только)
COPY ["ActivityService.csproj", "."]
RUN dotnet restore "ActivityService.csproj"

# 2. Copy sources
COPY . .

# 3. ✅ Publish БЕЗ --no-restore!!!
WORKDIR "/src"
RUN dotnet publish "ActivityService.csproj" \
    -c Release \
    -o /app/publish
    # ← УДАЛИ --no-restore!

# Runtime — .NET 10.0
FROM mcr.microsoft.com/dotnet/aspnet:10.0-alpine
WORKDIR /app
EXPOSE 5001 5002

ENV ASPNETCORE_URLS="http://+:5001;http://+:5002"
ENV DOTNET_EnableDiagnostics=0

COPY --from=build /app/publish .

# BusyBox
RUN addgroup -g 1000 -S aspnet && \
    adduser -u 1000 -S -G aspnet aspnet && \
    chown -R aspnet:aspnet /app

USER aspnet

HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:5002/health || exit 1

ENTRYPOINT ["dotnet", "ActivityService.dll"]
